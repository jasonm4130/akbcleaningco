header#top-bar.navbar-fixed-top.animated-header
  .container
    .navbar-header
      // responsive nav button
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      // /responsive nav button
      // logo
      .navbar-brand
        a(href='/')
          img(src='/assets/images/logo.png', alt='A.K.B Cleaning Co Logo')
      // /logo
    // main menu
    nav.collapse.navbar-collapse.navbar-right(role='navigation')
      .main-menu
        ul.nav.navbar-nav.navbar-right
          | {% assign sorted_pages = site.pages | sort:"order" %}
          | {% for p in sorted_pages %}
          | {% if page.url == p.url %}
          li.active
            a(href='{{p.url}}') {{ p.title }}
          | {% else %}
          li
            a(href='{{ p.url }}') {{p.title}}
          | {% endif %}
          | {% endfor %}
    // /main nav
